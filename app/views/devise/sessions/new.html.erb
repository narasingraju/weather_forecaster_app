<div class="login-form" style="margin-bottom: 120px">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <h2 class="text-center">Log in</h2>       
    <div class="form-group">
      <%= f.email_field :email, placeholder: "Email", required: "required", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, placeholder: "Password", class: "form-control", required: "required" %>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block">Log in</button>
    </div>
    <div class="clearfix">
      <label class="float-left form-check-label" style="margin-right: 25px;"><input type="checkbox"> Remember me</label>
      <%= link_to "Forgot Password?", new_password_path(resource_name), class: "float-right", style: "margin-left: 55px;" %>
    </div>        
  <% end %>
  <p class="text-center"><%= link_to "Create an Account", new_registration_path(resource_name) %><br /></p>
</div>